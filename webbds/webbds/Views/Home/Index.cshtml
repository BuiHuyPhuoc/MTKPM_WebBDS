@model IEnumerable<webbds.Models.BatDongSan>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="container">
        <div class="bg-light p-5 text-center" style="background-image: url('https://media.vneconomy.vn/w800/images/upload/2022/11/16/56c99f14-2861-4dc2-ae06-3c04c8b22a63.jpg'); background-size: cover; background-position: center;">
            <h2 style="color: #fff !important">An tâm chọn, An tâm mua</h2>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <form action="@Url.Action("SearchProject", "Search")" method="get">
                            <div class="input-group my-3">
                                <div class="input-group">
                                    <input name="keyWord" type="text" class="form-control" placeholder="Tên dự án" aria-label="Username" aria-describedby="basic-addon1">
                                    <select name="area" class="custom-select" id="">
                                        <option selected value="null">Diện tích tối thiểu</option>
                                        <option value="0-100">0-100m2</option>
                                        <option value="100-300">100-300m2</option>
                                        <option value="300-100000">Trên 300m2</option>
                                    </select>
                                    <button class="btn btn-light" type="submit">
                                        <img style="width: 24px; height: 24px" src="~/Content/Images/search-interface-symbol.png" />
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container my-5">
        <h2 class="text-center">Dự án nổi bật</h2>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 col-sm-6 mb-4">
                    <div class="card">
                        <a style="text-decoration: none !important; color: black;" href="@Url.Action("CT_BDS", "Home", new { id = item.MaBatDongSan })">
                            <img class="card-img-top" src="@Url.Content(item.Anh)" alt="Hình ảnh dự án" style="height: 200px;">
                            <div class="card-body">
                                <h5 class="card-title">@item.TieuDe</h5>
                                <p class="card-text">@item.Gia</p>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="container p-2">
        <img src="https://cdn.mogi.vn/banner/2023/6_a85230e0-b73a-4e11-acb1-d4788b5d85a4.png" class="mx-auto d-block" style="width: 100%; max-height: 200px;" />
    </div>
</main>
